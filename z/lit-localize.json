{
  "$schema": "https://raw.githubusercontent.com/lit/lit/main/packages/localize-tools/config.schema.json",
  "sourceLocale": "en",
  "targetLocales": [
    "ja-JP",
    "zh-Hans",
    "zh-Hant"
  ],
  "tsConfig": "tsconfig.json",
  "output": {
    "mode": "runtime",
    "outputDir": "src/generated/locales",
    "localeCodesModule": "src/generated/locales.ts"
  },
  "interchange": {
    "format": "xliff",
    "xliffDir": "xliff"
  }
}
